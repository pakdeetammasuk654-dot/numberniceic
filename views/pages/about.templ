		@keyframes fadeInDown {
			from { opacity: 0; transform: translateY(-30px); }
			to { opacity: 1; transform: translateY(0); }
		}

		@keyframes rotate {
			from { transform: rotate(0deg); }
			to { transform: rotate(360deg); }
		}

		/* Mobile Responsive */
		@media (max-width: 1024px) {
			.impact-grid { grid-template-columns: repeat(2, 1fr); }
			.concept-content { grid-template-columns: 1fr; gap: 3rem; }
			.about-container { padding: 4rem 1.5rem; }
		}

		@media (max-width: 768px) {
			.hero-divider { margin: 2rem auto; }
			.impact-grid { grid-template-columns: 1fr; }
			.concept-image-container { order: -1; height: 320px; }
			.visual-card { width: 260px; height: 260px; }
			.mission-banner { padding: 3rem 1.5rem; border-radius: 30px; }
			.cta-card { border-radius: 40px; padding: 3rem 1.5rem; }
			.cta-btn-premium { padding: 1.25rem 2.5rem; width: 100%; justify-content: center; }
