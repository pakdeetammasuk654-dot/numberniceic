		.expert-section {
			margin-bottom: 8rem;
		}

		.expert-grid {
			display: flex;
			justify-content: center;
			margin-top: 3rem;
		}

		.expert-card {
			background: white;
			padding: 3rem;
			border-radius: 40px;
			text-align: center;
			max-width: 400px;
			box-shadow: 0 10px 30px rgba(0,0,0,0.03);
			border: 1px solid #edf2f7;
		}

		.expert-avatar {
			width: 100px;
			height: 100px;
			background: #f7fafc;
			margin: 0 auto 2rem;
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			border: 2px solid #edf2f7;
		}

		.expert-card h3 {
			font-family: 'Kanit', sans-serif;
			font-size: 1.5rem;
			margin-bottom: 0.5rem;
			color: var(--primary-dark);
		}

		.expert-tag {
			display: inline-block;
			font-size: 0.875rem;
			color: #3182ce;
			font-weight: 700;
			text-transform: uppercase;
			margin-bottom: 1rem;
		}

		.expert-card p {
			color: #718096;
			margin-bottom: 1.5rem;
			line-height: 1.6;
		}

		.expert-contact {
